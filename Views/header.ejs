<!doctype html>
<html lang="is">
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/css?family=Lora" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

    <script src="/scripts/jquery-3.3.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </head>

  <body>

    <nav class="navbar navbar-light">
      <div class="navbar-brand">
        <button id="login-button-homescreen" type="button" class="btn btn-outline-light" data-toggle="modal" data-target="#login-modal">Login</button>
        <button id="sign-up-button-homescreen" type="button" class="btn btn-outline-light" data-toggle="modal" data-target="#sign-up-modal">Sign up</button>
      </div>
      <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    </nav>

    <div class="wrapper">
      <nav id="sidebar">
        <div class="sidebar-header">
          <h3>E-Library</h3>

          <ul class="list-unstyled components">
            <li><a href="/">Home</a></li>
            <li><a href="#">About</a></li>
            <li>
              <a href="#categories-submenu" data-toggle="collapse" aria-expanded="false">
                Categories
                <img src="/images/chevron-down.svg" alt="">
              </a>
                <ul class="collapse list-unstyled" id="categories-submenu">
                  <li><input type="text" name="" value="" placeholder="+ Add new category"></li>
                  <% categories.forEach(function(categoryRow) { %>
                      <li><a href="#"><%= categoryRow.category %></a></li>
                  <% }); %>
                </ul>
            </li>
            <li><a href="#">Contact</a></li>
            <hr>
            <li>
              <a href="#users-account-submenu" data-toggle="collapse" aria-expanded="false">
                Your account
                <img src="/images/chevron-down.svg" alt="">
              </a>
                <ul class="collapse list-unstyled" id="users-account-submenu">
                  <li><a href="/account">About</a></li>
                  <li><a href="/bookList">Your book list</a></li>
                  <li><a href="#">Your books</a></li>
                </ul>
            </li>
            <li><a href="#" data-toggle="modal" data-target="#FindUserModal">Find users</a></li>
          </ul>

          <div class="modal fade" id="FindUserModal" tabindex="-1" role="dialog" aria-labelledby="FindUsersModalTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="FindUserModalTitle">Find Users</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <div class="search-users">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                  </div>
                </div>
                <div class="modal-body">
                  ...
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div>
            </div>
          </div>

        </div>
      </nav>
